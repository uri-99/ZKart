{
    "manifest_version": 3,
    "name": "BitCart",
    "version": "1.0",
    "description": "Extracts product name and price from e-commerce pages",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["read-page-content.js"]
      }
    ]
  }